<!DOCTYPE html>
<html>
<head>
  <title>Table Example</title>
  <style>
    body{
        font-family: Arial, Helvetica, sans-serif;
    }
    table {
      border-collapse: collapse;
    }

    th, td {
      border: 1px solid black;
      padding: 8px;
    }
    button {
  /* Set the background color */
  border: none; /* Remove the border */
  padding: 10px 20px; /* Set padding */
  text-align: center; /* Center the text */
  text-decoration: none; /* Remove underline */
  display: inline-block; /* Display as inline-block */
  font-size: 16px; /* Set font size */
  cursor: pointer; /* Add a cursor pointer */
  border-radius: 4px; /* Add border radius */
  margin:10px;
}

  </style>
</head>
<body>
  <h3>Ports</h3>
  <button onclick="window.open('/download/ports')">Download Excel</button>
  <table>
    <thead>
      <tr>
        <th>Port Id</th>
        <th>Port Name</th>
        <th>Type</th>
        <th>Size</th>
        <th>Vessels In Port</th>
        <th>Arrivals</th>
        <th>Departures</th>
        <th>Excepted Arrivals</th>
        <th>View Arrivals</th>
        <th>View Departures</th>
      </tr>
    </thead>
    <tbody>
        <% ports.forEach(function(row) { %>
            <tr>
              <% row.forEach(function(cell) { %>
                <td><%= cell %></td>
              <% }) %>
            </tr>
          <% }) %>
    </tbody>
  </table>
</body>
</html>
